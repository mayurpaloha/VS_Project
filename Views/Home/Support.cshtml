@{
    ViewData["Title"] = "Customer Support - Agro Saffron";
}

<!-- Hero Section -->
<section class="hero-support bg-dark text-white py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 fw-bold mb-4">Customer Support</h1>
                <p class="lead opacity-75">
                    We're here to help! Get assistance with your orders, products, or any questions you may have.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Support Content -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="support-content bg-white rounded-3 shadow-sm p-5">
                    <!-- Contact Methods -->
                    <div class="mb-5">
                        <h2 class="h3 fw-bold text-dark mb-4">Contact Methods</h2>
                        <div class="row g-4">
                            <div class="col-md-4">
                                <div class="contact-method-card text-center p-4 border rounded-3 h-100">
                                    <div class="contact-icon bg-warning bg-opacity-10 rounded-3 d-inline-flex align-items-center justify-content-center mb-3"
                                         style="width: 80px; height: 80px;">
                                        <i class="fas fa-phone fa-2x text-warning"></i>
                                    </div>
                                    <h4 class="h5 fw-bold text-dark mb-3">Phone Support</h4>
                                    <p class="text-muted mb-2">+91 98765 43210</p>
                                    <p class="text-muted small">Mon-Fri: 9AM-6PM IST</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="contact-method-card text-center p-4 border rounded-3 h-100">
                                    <div class="contact-icon bg-warning bg-opacity-10 rounded-3 d-inline-flex align-items-center justify-content-center mb-3"
                                         style="width: 80px; height: 80px;">
                                        <i class="fas fa-envelope fa-2x text-warning"></i>
                                    </div>
                                    <h4 class="h5 fw-bold text-dark mb-3">Email Support</h4>
                                    <p class="text-muted mb-2">support@agrosaffron.com</p>
                                    <p class="text-muted small">Response within 24 hours</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="contact-method-card text-center p-4 border rounded-3 h-100">
                                    <div class="contact-icon bg-warning bg-opacity-10 rounded-3 d-inline-flex align-items-center justify-content-center mb-3"
                                         style="width: 80px; height: 80px;">
                                        <i class="fas fa-comments fa-2x text-warning"></i>
                                    </div>
                                    <h4 class="h5 fw-bold text-dark mb-3">Live Chat</h4>
                                    <p class="text-muted mb-2">Available on website</p>
                                    <p class="text-muted small">Mon-Fri: 9AM-6PM IST</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- FAQ Section -->
                    <div class="mb-5">
                        <h2 class="h3 fw-bold text-dark mb-4">Frequently Asked Questions</h2>
                        <div class="accordion" id="faqAccordion">
                            <!-- FAQ 1 -->
                            <div class="accordion-item">
                                <h3 class="accordion-header">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                        How do I track my order?
                                    </button>
                                </h3>
                                <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        Once your order ships, you'll receive a tracking number via email. You can track your package using the link provided or by visiting our order tracking page.
                                    </div>
                                </div>
                            </div>
                            <!-- FAQ 2 -->
                            <div class="accordion-item">
                                <h3 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                        What is your return policy?
                                    </button>
                                </h3>
                                <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        We offer a 30-day return policy for unopened and unused products. Please visit our Returns Policy page for detailed information.
                                    </div>
                                </div>
                            </div>
                            <!-- FAQ 3 -->
                            <div class="accordion-item">
                                <h3 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                        How do I store saffron?
                                    </button>
                                </h3>
                                <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        Store saffron in an airtight container in a cool, dark place. Avoid exposure to light, heat, and moisture to preserve its quality and aroma.
                                    </div>
                                </div>
                            </div>
                            <!-- FAQ 4 -->
                            <div class="accordion-item">
                                <h3 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                                        Do you offer international shipping?
                                    </button>
                                </h3>
                                <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        Yes, we ship to select countries internationally. Please contact our support team for specific shipping rates and delivery times to your location.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Support Form -->
                    <div class="mb-5">
                        <h2 class="h3 fw-bold text-dark mb-4">Send us a Message</h2>
                        <form class="support-form">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="name" class="form-label">Full Name</label>
                                    <input type="text" class="form-control" id="name" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="email" class="form-label">Email Address</label>
                                    <input type="email" class="form-control" id="email" required>
                                </div>
                                <div class="col-12">
                                    <label for="subject" class="form-label">Subject</label>
                                    <input type="text" class="form-control" id="subject" required>
                                </div>
                                <div class="col-12">
                                    <label for="message" class="form-label">Message</label>
                                    <textarea class="form-control" id="message" rows="5" required></textarea>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-warning btn-lg">
                                        <i class="fas fa-paper-plane me-2"></i>Send Message
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <!-- Business Hours -->
                    <div class="mt-5 p-4 bg-light rounded-3">
                        <h3 class="h4 fw-bold text-dark mb-3">Business Hours</h3>
                        <div class="row">
                            <div class="col-md-6">
                                <p class="text-muted mb-2"><strong>Customer Support:</strong></p>
                                <p class="text-muted mb-0">
                                    Monday - Friday: 9:00 AM - 6:00 PM IST<br>
                                    Saturday: 10:00 AM - 4:00 PM IST<br>
                                    Sunday: Closed
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p class="text-muted mb-2"><strong>Emergency Contact:</strong></p>
                                <p class="text-muted mb-0">
                                    For urgent order issues outside business hours:<br>
                                    <strong>+91 98765 43211</strong>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .hero-support {
        background: linear-gradient(135deg, #1f293e 0%, #374151 100%);
    }

    .contact-method-card {
        transition: all 0.3s ease;
    }

        .contact-method-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            border-color: #f59e0b !important;
        }

    .accordion-button {
        font-weight: 600;
    }

        .accordion-button:not(.collapsed) {
            background-color: #fffbeb;
            color: #92400e;
        }

    .support-form .form-control {
        border-radius: 8px;
        border: 1px solid #d1d5db;
    }

        .support-form .form-control:focus {
            border-color: #f59e0b;
            box-shadow: 0 0 0 0.2rem rgba(245, 158, 11, 0.25);
        }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Support form submission
            const supportForm = document.querySelector('.support-form');
            if (supportForm) {
                supportForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    alert('Thank you for your message! We will get back to you within 24 hours.');
                    this.reset();
                });
            }
        });
    </script>
}