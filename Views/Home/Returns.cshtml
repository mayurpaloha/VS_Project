@{
    ViewData["Title"] = "Return Policy - Agro Saffron";
}

<!-- Hero Section -->
<section class="hero-returns bg-dark text-white py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 fw-bold mb-4">Return Policy</h1>
                <p class="lead opacity-75">
                    We stand behind the quality of our products. Learn about our return and refund process.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Returns Content -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="returns-content bg-white rounded-3 shadow-sm p-5">
                    <!-- Return Period -->
                    <div class="mb-5">
                        <h2 class="h3 fw-bold text-dark mb-3">Return Window</h2>
                        <div class="alert alert-info">
                            <i class="fas fa-clock me-2"></i>
                            <strong>30-Day Return Policy:</strong> You may return most items within 30 days of delivery for a full refund or exchange.
                        </div>
                    </div>

                    <!-- Eligibility -->
                    <div class="mb-5">
                        <h2 class="h3 fw-bold text-dark mb-3">Return Eligibility</h2>
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="eligibility-card p-4 border border-success rounded-3 h-100">
                                    <div class="eligibility-icon bg-success bg-opacity-10 rounded-3 d-inline-flex align-items-center justify-content-center mb-3"
                                         style="width: 60px; height: 60px;">
                                        <i class="fas fa-check text-success"></i>
                                    </div>
                                    <h4 class="h5 fw-bold text-dark mb-3">What Can Be Returned</h4>
                                    <ul class="text-muted">
                                        <li>Damaged or defective products</li>
                                        <li>Incorrect items received</li>
                                        <li>Unopened and unused products</li>
                                        <li>Products in original packaging</li>
                                        <li>Items with manufacturing defects</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="eligibility-card p-4 border border-danger rounded-3 h-100">
                                    <div class="eligibility-icon bg-danger bg-opacity-10 rounded-3 d-inline-flex align-items-center justify-content-center mb-3"
                                         style="width: 60px; height: 60px;">
                                        <i class="fas fa-times text-danger"></i>
                                    </div>
                                    <h4 class="h5 fw-bold text-dark mb-3">What Cannot Be Returned</h4>
                                    <ul class="text-muted">
                                        <li>Opened or used saffron products</li>
                                        <li>Products damaged by customer misuse</li>
                                        <li>Personalized or custom orders</li>
                                        <li>Sale or clearance items</li>
                                        <li>Products without original packaging</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Return Process -->
                    <div class="mb-5">
                        <h2 class="h3 fw-bold text-dark mb-4">Return Process</h2>
                        <div class="row g-4">
                            <div class="col-lg-3 col-md-6">
                                <div class="process-step text-center">
                                    <div class="step-number bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                                         style="width: 60px; height: 60px;">
                                        <span class="fw-bold">1</span>
                                    </div>
                                    <h5 class="fw-bold mb-3">Contact Us</h5>
                                    <p class="text-muted small">Email returns@agrosaffron.com with your order details and reason for return</p>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="process-step text-center">
                                    <div class="step-number bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                                         style="width: 60px; height: 60px;">
                                        <span class="fw-bold">2</span>
                                    </div>
                                    <h5 class="fw-bold mb-3">Get Approval</h5>
                                    <p class="text-muted small">We'll review your request within 24 hours and provide return authorization</p>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="process-step text-center">
                                    <div class="step-number bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                                         style="width: 60px; height: 60px;">
                                        <span class="fw-bold">3</span>
                                    </div>
                                    <h5 class="fw-bold mb-3">Ship Item</h5>
                                    <p class="text-muted small">Package the item securely with original packaging and include the return form</p>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="process-step text-center">
                                    <div class="step-number bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                                         style="width: 60px; height: 60px;">
                                        <span class="fw-bold">4</span>
                                    </div>
                                    <h5 class="fw-bold mb-3">Receive Refund</h5>
                                    <p class="text-muted small">Get your refund within 5-7 business days after we receive and inspect the return</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Refunds -->
                    <div class="mb-5">
                        <h2 class="h3 fw-bold text-dark mb-3">Refunds</h2>
                        <div class="refund-info bg-light p-4 rounded-3">
                            <ul class="text-muted mb-0">
                                <li><strong>Processing Time:</strong> Refunds are processed within 5-7 business days after we receive and inspect the return</li>
                                <li><strong>Shipping Costs:</strong> Original shipping costs are non-refundable</li>
                                <li><strong>Return Shipping:</strong> Return shipping costs are the customer's responsibility unless the return is due to our error</li>
                                <li><strong>Payment Method:</strong> Refunds will be issued to the original payment method used for purchase</li>
                                <li><strong>Partial Refunds:</strong> For items returned opened or used, we may issue a partial refund</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Exchanges -->
                    <div class="mb-5">
                        <h2 class="h3 fw-bold text-dark mb-3">Exchanges</h2>
                        <div class="exchange-info">
                            <p class="text-muted mb-3">
                                We currently offer exchanges for the following situations:
                            </p>
                            <ul class="text-muted">
                                <li>Defective or damaged items received</li>
                                <li>Incorrect items shipped</li>
                                <li>Size exchanges (if applicable to other products)</li>
                            </ul>
                            <p class="text-muted mt-3">
                                <strong>Note:</strong> Please contact us within 30 days of delivery to arrange an exchange. Exchanges are subject to product availability.
                            </p>
                        </div>
                    </div>

                    <!-- Return Shipping -->
                    <div class="mb-5">
                        <h2 class="h3 fw-bold text-dark mb-3">Return Shipping</h2>
                        <div class="shipping-info">
                            <p class="text-muted mb-3">
                                <strong>Customer-Paid Returns:</strong> For returns that are not due to our error, customers are responsible for return shipping costs.
                            </p>
                            <p class="text-muted mb-3">
                                <strong>Prepaid Return Labels:</strong> For returns due to our error (wrong item, defective product), we will provide a prepaid return shipping label.
                            </p>
                            <p class="text-muted">
                                <strong>Shipping Method:</strong> We recommend using a trackable shipping service and purchasing shipping insurance for returns.
                            </p>
                        </div>
                    </div>

                    <!-- Special Cases -->
                    <div class="mb-5">
                        <h2 class="h3 fw-bold text-dark mb-3">Special Cases</h2>
                        <div class="special-cases">
                            <div class="case-item mb-4">
                                <h4 class="h5 fw-bold text-dark mb-2">Damaged Items</h4>
                                <p class="text-muted mb-0">
                                    If your item arrives damaged, please contact us within 48 hours of delivery. Include photos of the damaged product and packaging for faster processing.
                                </p>
                            </div>
                            <div class="case-item mb-4">
                                <h4 class="h5 fw-bold text-dark mb-2">Missing Items</h4>
                                <p class="text-muted mb-0">
                                    If you received an incomplete order, contact us immediately with your order number. We'll ship the missing items at no additional cost.
                                </p>
                            </div>
                            <div class="case-item">
                                <h4 class="h5 fw-bold text-dark mb-2">Wrong Items</h4>
                                <p class="text-muted mb-0">
                                    If you received the wrong item, we'll arrange for a return and send the correct product. We cover all shipping costs for our errors.
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Return Address -->
                    <div class="mb-5">
                        <h2 class="h3 fw-bold text-dark mb-3">Return Address</h2>
                        <div class="return-address bg-light p-4 rounded-3">
                            <p class="text-muted mb-2"><strong>Agro Saffron Returns Department</strong></p>
                            <p class="text-muted mb-1">123 Saffron Avenue</p>
                            <p class="text-muted mb-1">Kashmir Valley</p>
                            <p class="text-muted mb-0">INDIA 190001</p>
                            <p class="text-muted mt-2"><strong>Note:</strong> Please wait for return authorization before shipping items to this address.</p>
                        </div>
                    </div>

                    <!-- Contact Information -->
                    <div class="mt-5 p-4 bg-warning bg-opacity-10 rounded-3 border border-warning">
                        <h3 class="h4 fw-bold text-dark mb-3">Return Assistance</h3>
                        <p class="text-muted mb-3">
                            For return-related questions or to initiate a return, please contact our customer support team:
                        </p>
                        <div class="row">
                            <div class="col-md-6">
                                <p class="text-muted mb-2">
                                    <strong>Email:</strong> returns@agrosaffron.com<br>
                                    <strong>Phone:</strong> +91 98765 43210
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p class="text-muted mb-0">
                                    <strong>Hours:</strong> Monday-Friday, 9AM-6PM IST<br>
                                    <strong>Response Time:</strong> Within 24 hours
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Policy Updates -->
                    <div class="mt-4 text-center">
                        <p class="text-muted small">
                            <i class="fas fa-info-circle me-1"></i>
                            This return policy was last updated on December 1, 2024. We reserve the right to update this policy at any time.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .hero-returns {
        background: linear-gradient(135deg, #1f293e 0%, #374151 100%);
    }

    .eligibility-card {
        transition: all 0.3s ease;
    }

        .eligibility-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

    .process-step {
        transition: all 0.3s ease;
        padding: 20px;
    }

        .process-step:hover {
            transform: translateY(-5px);
        }

    .step-number {
        font-size: 1.5rem;
        transition: all 0.3s ease;
    }

    .process-step:hover .step-number {
        transform: scale(1.1);
    }

    .case-item {
        padding: 15px;
        border-left: 4px solid #f59e0b;
        background-color: #fffbeb;
        border-radius: 0 8px 8px 0;
    }

    .returns-content h2 {
        border-bottom: 2px solid #f59e0b;
        padding-bottom: 10px;
    }

    .returns-content ul {
        padding-left: 20px;
    }

    .returns-content li {
        margin-bottom: 8px;
    }

    .refund-info, .return-address {
        border-left: 4px solid #10b981;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add smooth scrolling for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });

            // Add animation to process steps on scroll
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, observerOptions);

            // Observe process steps
            document.querySelectorAll('.process-step').forEach(step => {
                step.style.opacity = '0';
                step.style.transform = 'translateY(20px)';
                step.style.transition = 'all 0.6s ease';
                observer.observe(step);
            });

            // Observe eligibility cards
            document.querySelectorAll('.eligibility-card').forEach(card => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                card.style.transition = 'all 0.6s ease';
                observer.observe(card);
            });
        });
    </script>
}