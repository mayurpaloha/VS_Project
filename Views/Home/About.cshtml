@{
    ViewData["Title"] = "About Us - Agro Saffron";
}

<!-- Hero Section -->
<section class="hero-about bg-dark text-white py-5">
    <div class="container">
        <div class="row align-items-center min-vh-60">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Our Story</h1>
                <p class="lead opacity-75">
                    From the fertile valleys of Kashmir to your home, we bring the world's finest saffron with a commitment to quality and sustainability.
                </p>
            </div>
            <div class="col-lg-6 text-center">
                <div class="about-hero-image">
                    <img src="https://images.unsplash.com/photo-1596040033221-a1bbfa4c9c74?w=500&h=400&fit=crop"
                         alt="Saffron Fields" class="img-fluid rounded-3">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Mission & Vision -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6">
                <div class="mission-card p-4 h-100">
                    <div class="mission-icon bg-warning rounded-circle d-inline-flex align-items-center justify-content-center mb-4"
                         style="width: 80px; height: 80px;">
                        <i class="fas fa-bullseye fa-2x text-white"></i>
                    </div>
                    <h3 class="fw-bold mb-3">Our Mission</h3>
                    <p class="text-muted">
                        To provide the highest quality saffron while promoting sustainable farming practices
                        and supporting local communities. We believe in transparency from farm to table.
                    </p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="vision-card p-4 h-100">
                    <div class="vision-icon bg-success rounded-circle d-inline-flex align-items-center justify-content-center mb-4"
                         style="width: 80px; height: 80px;">
                        <i class="fas fa-eye fa-2x text-white"></i>
                    </div>
                    <h3 class="fw-bold mb-3">Our Vision</h3>
                    <p class="text-muted">
                        To become the world's most trusted saffron brand, known for exceptional quality,
                        ethical sourcing, and customer satisfaction.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Our Values -->
<section class="py-5 bg-white">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="display-5 fw-bold text-dark mb-3">Our Values</h2>
                <p class="lead text-muted">The principles that guide everything we do</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="value-card text-center p-4">
                    <div class="value-icon bg-warning bg-opacity-10 rounded-3 d-inline-flex align-items-center justify-content-center mb-4"
                         style="width: 80px; height: 80px;">
                        <i class="fas fa-gem fa-2x text-warning"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Quality First</h4>
                    <p class="text-muted">Every strand of saffron is hand-inspected to ensure it meets our rigorous quality standards.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="value-card text-center p-4">
                    <div class="value-icon bg-warning bg-opacity-10 rounded-3 d-inline-flex align-items-center justify-content-center mb-4"
                         style="width: 80px; height: 80px;">
                        <i class="fas fa-leaf fa-2x text-warning"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Sustainability</h4>
                    <p class="text-muted">We work with farmers who practice organic farming and environmental conservation.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="value-card text-center p-4">
                    <div class="value-icon bg-warning bg-opacity-10 rounded-3 d-inline-flex align-items-center justify-content-center mb-4"
                         style="width: 80px; height: 80px;">
                        <i class="fas fa-hands-helping fa-2x text-warning"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Community</h4>
                    <p class="text-muted">Supporting local farmers and their families is at the heart of our business.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Our Process -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="display-5 fw-bold text-dark text-center mb-5">Our Process</h2>
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="process-step text-center">
                    <div class="step-number bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                         style="width: 60px; height: 60px;">
                        <span class="fw-bold">1</span>
                    </div>
                    <h5 class="fw-bold mb-3">Cultivation</h5>
                    <p class="text-muted small">Organic farming in the perfect climate of Kashmir valley</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="process-step text-center">
                    <div class="step-number bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                         style="width: 60px; height: 60px;">
                        <span class="fw-bold">2</span>
                    </div>
                    <h5 class="fw-bold mb-3">Harvesting</h5>
                    <p class="text-muted small">Careful hand-picking of saffron flowers at dawn</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="process-step text-center">
                    <div class="step-number bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                         style="width: 60px; height: 60px;">
                        <span class="fw-bold">3</span>
                    </div>
                    <h5 class="fw-bold mb-3">Processing</h5>
                    <p class="text-muted small">Traditional methods to preserve aroma and color</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="process-step text-center">
                    <div class="step-number bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                         style="width: 60px; height: 60px;">
                        <span class="fw-bold">4</span>
                    </div>
                    <h5 class="fw-bold mb-3">Quality Check</h5>
                    <p class="text-muted small">Laboratory testing for purity and potency</p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .hero-about {
        background: linear-gradient(135deg, #1f293e 0%, #374151 100%);
    }

    .min-vh-60 {
        min-height: 60vh;
    }

    .mission-card, .vision-card, .value-card {
        transition: all 0.3s ease;
        border-radius: 12px;
    }

        .mission-card:hover, .vision-card:hover, .value-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }

    .process-step {
        transition: all 0.3s ease;
        padding: 20px;
    }

        .process-step:hover {
            transform: translateY(-5px);
        }

    .step-number {
        font-size: 1.5rem;
        transition: all 0.3s ease;
    }

    .process-step:hover .step-number {
        transform: scale(1.1);
    }
</style>