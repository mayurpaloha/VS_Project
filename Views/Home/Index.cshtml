@model IEnumerable<Agro_Saffron.Models.Product>

@{
    ViewData["Title"] = "Agro Saffron - Premium Quality Saffron";
}

<!-- Modern Hero Section -->
<section class="hero-modern bg-dark text-white">
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <h1 class="display-3 fw-bold mb-4">
                    Premium <span class="text-warning">Saffron</span><br>Perfected by Nature
                </h1>
                <p class="lead mb-4 opacity-75">
                    Experience the world's most precious spice, meticulously sourced and crafted for exceptional quality.
                    Our saffron represents the pinnacle of purity, aroma, and flavor.
                </p>
                <div class="d-flex gap-3 flex-wrap">
                    <a href="#products" class="btn btn-warning btn-lg px-4 py-3">
                        <i class="fas fa-shopping-bag me-2"></i>Explore Collection
                    </a>
                    <a href="#about" class="btn btn-outline-light btn-lg px-4 py-3">
                        <i class="fas fa-play-circle me-2"></i>Our Story
