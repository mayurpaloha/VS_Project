<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agro Saffron</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Add Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- ADD THIS LINE: Render Styles section if defined -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">🌿 Agro Saffron</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Products" asp-action="Index">Products</a>
                        </li>
                    </ul>

                    <!-- Search Form - Moved inside navbar -->
                    <form asp-controller="Products" asp-action="Index" method="get" class="d-flex me-3">
                        <input class="form-control me-2" type="search" name="searchString" placeholder="Search here..." aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Professional Footer -->
    <footer class="bg-dark text-light pt-5">
        <div class="container">
            <!-- Main Footer Content -->
            <div class="row g-4">
                <!-- About Us -->
                <div class="col-lg-4 col-md-6">
                    <div class="footer-section">
                        <h5 class="text-warning mb-4 fw-bold">About Agro Saffron</h5>
                        <p class="text-light opacity-75 mb-4">
                            Agro Saffron is dedicated to providing the highest quality saffron, sourced directly from sustainable farms
                            and delivered with uncompromising quality standards.
                        </p>
                        <div class="social-links">
                            <a href="#" class="text-light opacity-75 me-3">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="#" class="text-light opacity-75 me-3">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="#" class="text-light opacity-75 me-3">
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a href="#" class="text-light opacity-75">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="col-lg-2 col-md-6">
                    <div class="footer-section">
                        <h5 class="text-warning mb-4 fw-bold">Quick Links</h5>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <a href="@Url.Action("Index", "Home")" class="text-light opacity-75 text-decoration-none hover-warning">Home</a>
                            </li>
                            <li class="mb-2">
                                <a href="#products" class="text-light opacity-75 text-decoration-none hover-warning">Products</a>
                            </li>
                            <li class="mb-2">
                                <a href="@Url.Action("About", "Home")" class="text-light opacity-75 text-decoration-none hover-warning">About Us</a>
                            </li>
                            <li class="mb-2">
                                <a href="@Url.Action("Index", "Products")" class="text-light opacity-75 text-decoration-none hover-warning">Shop</a>
                            </li>
                            <li class="mb-2">
                                <a href="@Url.Action("Index", "ShoppingCart")" class="text-light opacity-75 text-decoration-none hover-warning">Cart</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Support & Policies -->
                <div class="col-lg-3 col-md-6">
                    <div class="footer-section">
                        <h5 class="text-warning mb-4 fw-bold">Support & Policies</h5>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <a href="@Url.Action("Privacy", "Home")" class="text-light opacity-75 text-decoration-none hover-warning">Privacy Policy</a>
                            </li>
                            <li class="mb-2">
                                <a href="@Url.Action("Terms", "Home")" class="text-light opacity-75 text-decoration-none hover-warning">Terms of Service</a>
                            </li>
                            <li class="mb-2">
                                <a href="@Url.Action("Shipping", "Home")" class="text-light opacity-75 text-decoration-none hover-warning">Shipping Policy</a>
                            </li>
                            <li class="mb-2">
                                <a href="@Url.Action("Returns", "Home")" class="text-light opacity-75 text-decoration-none hover-warning">Return Policy</a>
                            </li>
                            <li class="mb-2">
                                <a href="@Url.Action("Support", "Home")" class="text-light opacity-75 text-decoration-none hover-warning">Customer Support</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="col-lg-3 col-md-6">
                    <div class="footer-section">
                        <h5 class="text-warning mb-4 fw-bold">Contact Us</h5>
                        <div class="contact-info">
                            <div class="contact-item d-flex align-items-start mb-3">
                                <i class="fas fa-map-marker-alt text-warning me-3 mt-1"></i>
                                <div>
                                    <p class="text-light opacity-75 mb-0">Saffron Agro</p>
                                    <p class="text-light opacity-75 mb-0">Sambhaji Nagar, Maharashtra, India</p>
                                </div>
                            </div>
                            <div class="contact-item d-flex align-items-center mb-3">
                                <i class="fas fa-phone text-warning me-3"></i>
                                <span class="text-light opacity-75">+91 98765 43210</span>
                            </div>
                            <div class="contact-item d-flex align-items-center mb-3">
                                <i class="fas fa-envelope text-warning me-3"></i>
                                <span class="text-light opacity-75">info@agrosaffron.com</span>
                            </div>
                            @* <div class="contact-item d-flex align-items-center">
                                <i class="fas fa-clock text-warning me-3"></i>
                                <span class="text-light opacity-75">Mon-Fri: 9AM-6PM</span>
                            </div> *@
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bottom Footer -->
            <div class="row mt-5 pt-4 border-top border-secondary">
                <div class="col-md-6">
                    <p class="text-light opacity-75 mb-0">
                        &copy; @DateTime.Now.Year - Agro Saffron. All rights reserved.
                    </p>
                </div>
                @* <div class="col-md-6 text-md-end">
                    <div class="footer-links">
                        <a href="#" class="text-light opacity-75 text-decoration-none me-3 hover-warning">General Info</a>
                        <a href="#" class="text-light opacity-75 text-decoration-none me-3 hover-warning">Product Usage</a>
                        <a href="#" class="text-light opacity-75 text-decoration-none hover-warning">Sitemap</a>
                    </div>
                </div> *@
            </div>
        </div>
    </footer>

    <!-- Add this CSS to your existing style section -->
    <style>
        /* Footer Styles */
        .footer-section h5 {
            font-size: 1.1rem;
            position: relative;
            padding-bottom: 10px;
        }

            .footer-section h5::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 40px;
                height: 2px;
                background: #f59e0b;
            }

        .hover-warning {
            transition: all 0.3s ease;
        }

            .hover-warning:hover {
                color: #f59e0b !important;
                padding-left: 5px;
            }

        .social-links a {
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
        }

            .social-links a:hover {
                background: #f59e0b;
                color: #1f293e !important;
                transform: translateY(-2px);
            }

        .contact-item {
            transition: all 0.3s ease;
        }

            .contact-item:hover {
                transform: translateX(5px);
            }

        .practice-item {
            transition: all 0.3s ease;
            padding: 20px;
            border-radius: 8px;
        }

            .practice-item:hover {
                background: rgba(255, 255, 255, 0.05);
                transform: translateY(-5px);
            }

        .practice-icon {
            transition: all 0.3s ease;
        }

        .practice-item:hover .practice-icon {
            transform: scale(1.1);
            background: rgba(245, 158, 11, 0.2) !important;
        }

        .footer-links a {
            transition: all 0.3s ease;
        }

            .footer-links a:hover {
                color: #f59e0b !important;
            }

        /* Ensure footer stays at bottom */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>